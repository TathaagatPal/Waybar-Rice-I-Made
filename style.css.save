*{
background-color:rgba(43,48,59,0.8);
color:black;
font-family:"JetBrains Mono","Font Awesome 6 free",monospace;
}
#clock{
border:2px black solid;
background-color:#cfcfc4;
border-radius:5px;
color:black;
padding-left:12px;
padding-right:12px;
}
#battery{
font-size:12px;
background-color:#80EF80;
border:darkgreen 2.5px solid;
border-radius:5px;
padding-left:6px;
padding-right:6px;
}
#pulseaudio{
font-size:12px;
background-color:#FFEE8C;
border:yellow 2.5px solid;
border-radius:5px;
padding-left:6px;
padding-right:6px;
}
#network{
font-size:12px;
background-color:#B3EBF2;
border:blue 2.5px solid;
border-radius:5px;
padding-left:6px;
padding-right:6px;
}
#disk{
padding-left:6px;
padding-right:6px;
border:2.5px solid purple;
font-size:12px;
background-color:#C3B1E1;
}
#workspaces button.active{
border-bottom:teal 5px solid;
}
#workspaces:hover{
opacity:0.5;
border:none;
}
#custom-thunar{
background-size:cover;
background-position:center;
min-width:32px;
min-height:32px;
background-image:url("/home/tathaagat/.config/waybar/icons/linux-file.png");
}
#custom-thunar:hover{
opacity:0.5;
}
